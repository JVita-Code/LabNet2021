@model LabNet2021.Tp7.MVC.Models.ShipperView

@{
    ViewBag.Tittle = "Shipper Page";
}

<h1>@ViewBag.Tittle</h1>





@using (Html.BeginForm("InsertUpdate", "Shipper", FormMethod.Post))
{
<div>
    <input class="btn btn-primary" type="button" onclick="document.location.href='@Url.Content("~/Shipper/Index")'" value="Volver" />
    <br />
    <br />

</div>
    <div class="form-group">
        <label>ShipperID: </label>
        @Html.TextBoxFor(s => s.ShipperID, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.ShipperID)

    </div>

    <div class="form-group">
        <label>CompanyName: </label>
        @Html.TextBoxFor(s => s.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.CompanyName)
    </div>

    <div class="form-group">
        <label>Phone: </label>
        @Html.TextBoxFor(s => s.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Phone)
       
    </div>   
    <div>
        <input onclick="document.location.href='@Url.Content("~/Shipper/InsertUpdate")'" class="btn btn-danger" type="submit" value="Guardar" />
        
    </div>
}




