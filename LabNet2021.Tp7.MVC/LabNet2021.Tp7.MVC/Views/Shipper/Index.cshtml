@model List<LabNet2021.Tp7.MVC.Models.ShipperView>

@{
    ViewBag.Tittle = "Shipper Page";
}

<h1>List of Shippers</h1>

<div>
    @Html.ActionLink("Insertar/Updatear Shipper", "InsertUpdate")
    <br />
    <br />
</div>

<table id="shippers" class="table table-bordered">
    <thead class="bg-primary">
        <tr>
            <th scope="col">Shipper ID</th>
            <th scope="col">Company Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
            @*<th scope="col">Test</th>*@
        </tr>
    </thead>

    <tbody>

        @foreach (var shipper in Model)
        {
        <tr>
            <td>@shipper.ShipperID</td>
            <td>@shipper.CompanyName</td>
            <td>@shipper.Phone</td>
            <td>@Html.ActionLink("Borrar", "Delete", new { id = shipper.ShipperID }, new { onclick = "return confirm('esta seguro de borrar?')" })</td>
            @*<td>
                <button class="btn-link" data-shipper-id="@shipper.ShipperID" js-delete>Delete</button>
            </td>*@
        </tr>
        }

        

    </tbody>

</table>



   
